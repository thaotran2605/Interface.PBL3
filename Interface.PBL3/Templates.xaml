<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Interface.PBL3.Templates">

    <ControlTemplate x:Key="SharedPageTemplate">
        <Grid RowDefinitions="Auto,*">

            <!-- Ảnh nền -->
            <Image Source="program.jpg"
                   Aspect="AspectFill"
                   Grid.RowSpan="2"
                   Opacity="0.25"
                   ZIndex="0" />

            <!-- Thanh menu điều hướng -->
            <Grid Grid.Row="0"
                  Padding="16,0"
                  BackgroundColor="#3B0A0A"
                  HeightRequest="60"
                  ZIndex="1">
                <ScrollView Orientation="Horizontal"
                            VerticalScrollBarVisibility="Never"
                            HorizontalScrollBarVisibility="Never">
                    <StackLayout Orientation="Horizontal"
                                 VerticalOptions="Center"
                                 Spacing="24">

                        <!-- Trang chủ -->
                        <Label Text="Trang chủ"
                               TextColor="White"
                               VerticalOptions="Center"
                               FontSize="16">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnHomeTapped" />
                            </Label.GestureRecognizers>
                        </Label>

                        <!-- Order -->
                        <Label Text="Order"
                               TextColor="White"
                               VerticalOptions="Center"
                               FontSize="16">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnOrderTapped" />
                            </Label.GestureRecognizers>
                        </Label>

                        <!-- Danh sách Order -->
                        <Label Text="Xem danh sách Order"
                               TextColor="White"
                               VerticalOptions="Center"
                               FontSize="16">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnOrderListTapped" />
                            </Label.GestureRecognizers>
                        </Label>

                        <!-- Ưu đãi -->
                        <Label Text="Xem ưu đãi"
                               TextColor="White"
                               VerticalOptions="Center"
                               FontSize="16">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnUuDaiTapped" />
                            </Label.GestureRecognizers>
                        </Label>

                        <!-- Doanh thu -->
                        <Label Text="Thống kê doanh thu trong ca"
                               TextColor="White"
                               VerticalOptions="Center"
                               FontSize="16">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnDoanhThuTapped" />
                            </Label.GestureRecognizers>
                        </Label>

                    </StackLayout>
                </ScrollView>
            </Grid>

            <!-- Nội dung trang -->
            <ContentPresenter Grid.Row="1"
                              Margin="20"
                              ZIndex="2" />
        </Grid>
    </ControlTemplate>

</ResourceDictionary>
