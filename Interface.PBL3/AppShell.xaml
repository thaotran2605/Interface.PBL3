<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Interface.PBL3.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Interface.PBL3"
    xmlns:pages="clr-namespace:Interface.PBL3.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Interface.PBL3">

    <!-- Trang chủ -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <!-- Trang đặt hàng -->
    <ShellContent
        Title="Đặt hàng"
        ContentTemplate="{DataTemplate pages:OrderPage}"
        Route="OrderPage" />

    <!-- Danh sách đơn hàng -->
    <ShellContent
        Title="DS Đơn hàng"
        ContentTemplate="{DataTemplate pages:DSOrderPage}"
        Route="DSOrderPage" />

    <!-- Ưu đãi -->
    <ShellContent
        Title="Ưu đãi"
        ContentTemplate="{DataTemplate pages:UuDaiPage}"
        Route="UuDaiPage" />

    <!-- Doanh thu -->
    <ShellContent
        Title="Doanh thu"
        ContentTemplate="{DataTemplate pages:DoanhThuPage}"
        Route="DoanhThuPage" />

</Shell>
